
@import '../../variables.pcss';

.screen {
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;

  &:after {
    content: '';
    display: block;
    padding-top: 100%;
  }

  .pixelRow {
    flex: 1;
    display: flex;
    flex-direction: row;
  }

  .letterInput {
    align-self: center;
    margin: 10px;
    width: 50px;
    text-align: center;

    &:focus {
      border-color: var(--highlightColor);
    }
  }
}